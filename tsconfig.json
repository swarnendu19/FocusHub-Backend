{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/@types/**/*.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}